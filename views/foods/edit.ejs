<!-- views/listings/edit.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit <%= foods.name %>
  </title>
</head>

<body>
  <%- include('../partials/_navbar.ejs') %>
    <h1>Edit a foods!</h1>

    <form action="/foods/<%= foods._id %>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= foods.name %>" />
      <br>
      <label for="instructions">Instructions:</label>
      <input type="text" name="instructions" id="instructions" value="<%= foods.instructions %>" />
      <br>
      <button type="submit">Edit foods</button>
    </form>
</body>

</html>